{%- liquid
  assign og_title = page_title | default: shop.name
  assign og_url = canonical_url | default: request.origin
  assign og_type = 'website'
  assign og_description = page_description | default: shop.description | default: shop.name

  if request.page_type == 'product'
    assign og_type = 'product'
  elsif request.page_type == 'article'
    assign og_type = 'article'
  elsif request.page_type == 'password'
    assign og_url = request.origin
  endif

  # Determine OG image with fallback hierarchy
  assign og_image = page_image
  if og_image == blank and request.page_type == 'product' and product.featured_image
    assign og_image = product.featured_image
  elsif og_image == blank and request.page_type == 'article' and article.image
    assign og_image = article.image
  elsif og_image == blank and settings.social_sharing_image != blank
    assign og_image = settings.social_sharing_image
  elsif og_image == blank and settings.logo != blank
    assign og_image = settings.logo
  endif
%}

<meta property="og:site_name" content="{{ shop.name | escape }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title | escape }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_description | escape }}">

{%- if og_image != blank -%}
  {%- assign og_image_url = og_image | image_url: width: 1200 -%}
  <meta property="og:image" content="https:{{ og_image_url }}">
  <meta property="og:image:secure_url" content="https:{{ og_image_url }}">
  <meta property="og:image:width" content="1200">
  {%- if og_image.aspect_ratio -%}
    <meta property="og:image:height" content="{{ 1200 | divided_by: og_image.aspect_ratio | round }}">
  {%- endif -%}
  <meta property="og:image:alt" content="{{ og_image.alt | default: og_title | escape }}">
{%- endif -%}

{%- if request.page_type == 'product' -%}
  <meta
    property="og:price:amount"
    content="{{ product.price | money_without_currency | strip_html }}"
  >
  <meta property="og:price:currency" content="{{ cart.currency.iso_code }}">
{%- endif -%}

{%- if settings.social_twitter_link != blank -%}
  <meta
    name="twitter:site"
    content="{{ settings.social_twitter_link | split: 'twitter.com/' | last | prepend: '@' }}"
  >
{%- endif -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title | escape }}">
<meta name="twitter:description" content="{{ og_description | escape }}">
{%- if og_image != blank -%}
  <meta name="twitter:image" content="https:{{ og_image | image_url: width: 1200 }}">
  {%- if og_image.alt != blank -%}
    <meta name="twitter:image:alt" content="{{ og_image.alt | escape }}">
  {%- endif -%}
{%- endif -%}
