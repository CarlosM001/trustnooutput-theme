{
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.liquid": "liquid"
  },
  "emmet.includeLanguages": {
    "liquid": "html"
  },
  "files.exclude": {
    "**/node_modules": true,
    "locales/node_modules": true,
    "locales/.shopify": true,
    "locales/.vscode": true,
    "**/.git": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "locales/node_modules": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "locales/node_modules/**": true
  },
  "shopifyLiquid.trace.server": "off",
  "themeCheck.checkOnChange": true,
  "themeCheck.checkOnOpen": true,
  "themeCheck.checkOnSave": true
}
