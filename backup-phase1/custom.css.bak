/* ==========================================================================
   00) CSS VARIABLES & DESIGN TOKENS
   ========================================================================== */
:root {
  /* Brand Colors */
  --tno-cyan: #00e5ff;
  --tno-magenta: #ff00cc;
  --tno-amber: #ffb000;
  --tno-black: #0a0a0f;
  --tno-white: #ffffff;

  /* Semantic Colors */
  --tno-bg: #ffffff;
  --tno-bg-soft: #f7f7f9;
  --tno-fg: #0f0f14;
  --tno-fg-dim: #444654;
  --tno-border: #e6e7ec;
  --tno-accent: var(--tno-cyan);
  --tno-link: var(--tno-cyan);

  /* Spacing & Radius */
  --tno-r-xs: 4px;
  --tno-r-sm: 8px;
  --tno-r-md: 16px;
  --tno-r-lg: 24px;
  --tno-r-xl: 32px;

  /* Shadows */
  --tno-shadow-1: 0 1px 2px rgba(0, 0, 0, 0.08);
  --tno-shadow-2: 0 4px 8px rgba(0, 0, 0, 0.12);
  --tno-shadow-3: 0 10px 30px rgba(0, 0, 0, 0.16);
  --tno-shadow-glow: 0 0 40px rgba(0, 229, 255, 0.3);

  /* Animation */
  --tno-ease: cubic-bezier(0.25, 0.1, 0.25, 1);
  --tno-ease-out: cubic-bezier(0.22, 0.61, 0.36, 1);
  --tno-ease-spring: cubic-bezier(0.175, 0.885, 0.32, 1.275);

  /* Durations */
  --tno-fast: 0.2s;
  --tno-base: 0.4s;
  --tno-slow: 0.8s;
  --tno-slower: 1.2s;

  /* Motion Settings */
  --reveal-distance: 24px;
  --parallax-speed: 0.5;
  --glitch-intensity: 1;
}

/* Dark Mode Support (Optional) */
@media (prefers-color-scheme: dark) {
  :root {
    --tno-bg: #0a0a0f;
    --tno-bg-soft: #12121a;
    --tno-fg: #f5f5f7;
    --tno-fg-dim: #a8a8b3;
    --tno-border: #2a2a35;
  }
}

/* ==========================================================================
   01) BASE STYLES & RESET
   ========================================================================== */
html {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  color: var(--tno-fg);
  background: var(--tno-bg);
}

/* Selection */
::selection {
  background: var(--tno-cyan);
  color: var(--tno-black);
}

/* Focus Visible */
:focus-visible {
  outline: 2px solid var(--tno-accent);
  outline-offset: 2px;
}

/* ==========================================================================
   02) TYPOGRAPHY
   ========================================================================== */
.tno-numeric {
  font-variant-numeric: tabular-nums;
}

.tno-mono {
  font-family: "SF Mono", Monaco, "Cascadia Code", "Roboto Mono", monospace;
  font-size: 0.95em;
  letter-spacing: -0.02em;
}

/* ==========================================================================
   03) LAYOUT UTILITIES
   ========================================================================== */
.tno-container {
  max-width: 1280px;
  margin-inline: auto;
  padding-inline: clamp(1rem, 4vw, 3rem);
}

.tno-grid {
  display: grid;
  gap: var(--gap, 2rem);
}

/* ==========================================================================
   04) BUTTONS
   ========================================================================== */
.button,
.shopify-challenge__button,
.product-form__submit,
button.shopify-payment-button__button--unbranded {
  border-radius: var(--tno-r-sm);
  transition:
    transform var(--tno-fast) var(--tno-ease),
    box-shadow var(--tno-fast) var(--tno-ease),
    background var(--tno-base) var(--tno-ease);
  will-change: transform;
}

.button--primary,
.product-form__submit {
  background: linear-gradient(135deg, var(--tno-cyan), var(--tno-accent));
  color: var(--tno-black);
  font-weight: 600;
  box-shadow: var(--tno-shadow-2);
}

.button--primary:hover,
.product-form__submit:hover {
  transform: translateY(-2px);
  box-shadow: var(--tno-shadow-3), var(--tno-shadow-glow);
}

/* Glitch Button */
.tno-btn-glitch {
  position: relative;
  overflow: hidden;
  isolation: isolate;
}

.tno-btn-glitch::before,
.tno-btn-glitch::after {
  content: "";
  position: absolute;
  inset: 0;
  pointer-events: none;
}

.tno-btn-glitch::before {
  background: repeating-linear-gradient(
    90deg,
    transparent 0 4px,
    rgba(0, 229, 255, 0.03) 4px 8px
  );
  transform: translateX(-100%);
  transition: transform 0.6s var(--tno-ease);
}

.tno-btn-glitch:hover::before {
  transform: translateX(100%);
}

/* ==========================================================================
   05) MOTION HERO SECTION
   ========================================================================== */
.tno-hero {
  position: relative;
  min-height: 60vh;
  background: var(--tno-bg);
  overflow: hidden;
  isolation: isolate;
  border-radius: var(--tno-r-lg);
  margin-block: 2rem;
}

@media (min-width: 768px) {
  .tno-hero {
    min-height: 80vh;
    margin-block: 3rem;
  }
}

/* Hero Media Container */
.tno-hero-media {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.tno-hero-img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transform: scale(1.05);
  animation: tno-pan 20s linear infinite;
  will-change: transform;
}

/* Hero Overlay */
.tno-hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.95) 0%,
    rgba(255, 255, 255, 0.7) 40%,
    rgba(255, 255, 255, 0.3) 70%,
    rgba(255, 255, 255, 0) 100%
  );
  pointer-events: none;
  z-index: 1;
}

/* Hero Caption */
.tno-hero-caption {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: clamp(2rem, 6vw, 5rem);
  z-index: 2;
}

.tno-hero-caption__content {
  max-width: 800px;
  margin-inline: auto;
}

/* Hero Text Alignment Variants */
.tno-hero--left .tno-hero-caption {
  justify-content: flex-start;
  text-align: left;
}

.tno-hero--right .tno-hero-caption {
  justify-content: flex-end;
  text-align: right;
}

/* Hero Typography */
.tno-title {
  font-weight: 900;
  font-size: clamp(2.5rem, 8vw, 6rem);
  line-height: 1.05;
  letter-spacing: -0.02em;
  margin: 0 0 1rem;
  color: var(--tno-black);
}

.tno-subtext {
  font-size: clamp(1rem, 2.5vw, 1.5rem);
  line-height: 1.5;
  margin: 0 0 2rem;
  opacity: 0.9;
  color: var(--tno-black);
  max-width: 600px;
  margin-inline: auto;
}

/* ==========================================================================
   06) GLITCH EFFECTS
   ========================================================================== */
.tno-glitch-strong,
.tno-glitch-soft,
.glitch {
  position: relative;
  display: inline-block;
}

.tno-glitch-strong::before,
.tno-glitch-strong::after,
.tno-glitch-soft::before,
.tno-glitch-soft::after {
  content: attr(data-text);
  position: absolute;
  inset: 0;
  pointer-events: none;
  opacity: 0.8;
}

/* Strong Glitch */
.tno-glitch-strong::before {
  animation: glitch-1 2.5s infinite;
  color: var(--tno-cyan);
  z-index: -1;
}

.tno-glitch-strong::after {
  animation: glitch-2 2.5s infinite;
  color: var(--tno-magenta);
  z-index: -1;
}

/* Soft Glitch */
.tno-glitch-soft::before {
  animation: glitch-1 3.5s infinite;
  color: var(--tno-cyan);
  opacity: 0.5;
  z-index: -1;
}

.tno-glitch-soft::after {
  animation: glitch-2 3.5s infinite;
  color: var(--tno-magenta);
  opacity: 0.5;
  z-index: -1;
}

/* ==========================================================================
   07) REVEAL & PARALLAX
   ========================================================================== */
.reveal {
  opacity: 0;
  transform: translateY(var(--reveal-distance));
  transition:
    opacity var(--tno-slow) var(--tno-ease-out),
    transform var(--tno-slow) var(--tno-ease-out);
  will-change: opacity, transform;
}

.reveal.is-visible {
  opacity: 1;
  transform: translateY(0);
}

/* Parallax */
[data-parallax] {
  transition: transform 0.1s linear;
  will-change: transform;
}

[data-mouse-parallax] {
  transition: transform 0.3s var(--tno-ease-out);
  will-change: transform;
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .reveal,
  [data-parallax],
  [data-mouse-parallax],
  .tno-glitch-strong::before,
  .tno-glitch-strong::after,
  .tno-glitch-soft::before,
  .tno-glitch-soft::after,
  .tno-btn-glitch::before,
  .tno-hero-img {
    animation: none !important;
    transition: none !important;
    transform: none !important;
    opacity: 1 !important;
  }
}

/* ==========================================================================
   08) ANIMATIONS
   ========================================================================== */
@keyframes tno-pan {
  0%,
  100% {
    transform: scale(1.05) translateX(0);
  }
  50% {
    transform: scale(1.1) translateX(-2%);
  }
}

@keyframes glitch-1 {
  0%,
  100% {
    clip-path: inset(0 0 100% 0);
    transform: translateX(0);
  }
  10% {
    clip-path: inset(0 0 80% 0);
    transform: translateX(2px);
  }
  20% {
    clip-path: inset(50% 0 30% 0);
    transform: translateX(-2px);
  }
  30% {
    clip-path: inset(20% 0 60% 0);
    transform: translateX(1px);
  }
  40% {
    clip-path: inset(80% 0 10% 0);
    transform: translateX(-1px);
  }
  50% {
    clip-path: inset(0 0 100% 0);
    transform: translateX(0);
  }
}

@keyframes glitch-2 {
  0%,
  100% {
    clip-path: inset(100% 0 0 0);
    transform: translateX(0);
  }
  15% {
    clip-path: inset(80% 0 10% 0);
    transform: translateX(-1px);
  }
  25% {
    clip-path: inset(30% 0 50% 0);
    transform: translateX(1px);
  }
  35% {
    clip-path: inset(60% 0 20% 0);
    transform: translateX(-2px);
  }
  45% {
    clip-path: inset(10% 0 80% 0);
    transform: translateX(2px);
  }
  55% {
    clip-path: inset(100% 0 0 0);
    transform: translateX(0);
  }
}

/* ==========================================================================
   09) UTILITIES
   ========================================================================== */
.tno-sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

.tno-no-scroll {
  overflow: hidden;
}

.tno-truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ==========================================================================
   10) RESPONSIVE BREAKPOINTS
   ========================================================================== */
@media (max-width: 768px) {
  .tno-hero {
    min-height: 50vh;
    border-radius: var(--tno-r-md);
  }

  .tno-hero-caption {
    padding: clamp(1.5rem, 4vw, 3rem);
  }

  .tno-title {
    font-size: clamp(2rem, 6vw, 3rem);
  }

  .tno-subtext {
    font-size: clamp(0.875rem, 2vw, 1.25rem);
  }
}

@media (min-width: 1280px) {
  .tno-hero {
    max-width: 1440px;
    margin-inline: auto;
  }
}
