{%- comment %} Mobile Search Overlay {%- endcomment %}
{% if section.settings.show_search %}
<div class="mobile-search-overlay" id="mobile-search-overlay" aria-hidden="true">
  <div class="mobile-search-overlay__inner">
    <form action="{{ routes.search_url }}" method="get" role="search" class="mobile-search-form">
      <input
