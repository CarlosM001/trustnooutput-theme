{% comment %}
  TRUST.NO.OUTPUT — Product Grid Section (Homepage Master Layout)

  TNO NOTE (2025-01-30): This section is the master layout for product cards.
  All styles have been moved to assets/custom.css for better maintainability.
  This section will be reused as a template for collection pages and related products.

  Features:
  - Grid layout: Desktop shows 4 cards per row, Mobile shows 2 cards per row
  - Arrow buttons above grid (top-right) with neon cyan glow
  - Smooth scrolling: Desktop slides by 4 cards, Mobile slides by 2 cards
  - Trust-style product cards with color variants and custom add-to-cart
{% endcomment %}

{%- liquid
  assign collection = collections[section.settings.collection] | default: collections.all
  assign eyebrow = section.settings.eyebrow | default: 'Digital Artifacts'
  assign headline = section.settings.headline | default: 'Products'
  assign intro = section.settings.intro | default: ''
-%}

<section class="product-grid-trust" id="product-grid-section">
  <div class="product-grid-trust__container">
    {%- comment %} Section Header {%- endcomment %}
    <div class="product-grid-trust__header">
      {%- if eyebrow != blank -%}
        <p class="product-grid-trust__eyebrow">{{ eyebrow }}</p>
      {%- endif -%}

      {%- if headline != blank -%}
        <h2 class="product-grid-trust__headline">{{ headline }}</h2>
      {%- endif -%}

      {%- if intro != blank -%}
        <p class="product-grid-trust__intro">{{ intro }}</p>
      {%- endif -%}
    </div>

    {%- comment %} Latest Drops Carousel - Responsive product carousel {%- endcomment %}
    <div class="tno-latest-drops" data-section-type="product-grid-trust">
      {%- comment %} Arrow controls positioned above grid, right-aligned {%- endcomment %}
      <div class="product-grid-trust__controls">
        <button
          type="button"
          class="product-grid-trust__arrow product-grid-trust__arrow--prev"
          aria-label="Previous products"
        >
          ‹
        </button>
        <button
          type="button"
          class="product-grid-trust__arrow product-grid-trust__arrow--next"
          aria-label="Next products"
        >
          ›
        </button>
      </div>
      <ul class="product-grid-trust__grid tno-latest-drops__track">
        {%- for product in collection.products limit: section.settings.products_to_show -%}
          <li class="tno-latest-drops__item">
            {% render 'card-product',
              card_product: product,
              card_style: 'trust',
              show_custom_add_to_cart: true,
              show_color_variants: true,
              lazy_load: true
            %}
          </li>
        {%- else -%}
          {%- comment %} Empty State {%- endcomment %}
          <li class="product-grid-trust__empty tno-latest-drops__item">
            <p>
              System.Message: No products found in the selected collection.
            </p>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Product Grid (TNO)",
  "class": "section-product-grid-trust",
  "settings": [
    {
      "type": "header",
      "content": "Collection Settings"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select which collection to display"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 3,
      "max": 24,
      "step": 3,
      "default": 9,
      "label": "Products to Show"
    },
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "Digital Artifacts"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Products"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Introduction Text",
      "info": "Optional description below headline"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "products_per_row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Products per Row (Desktop)",
      "info": "Mobile always shows 1 per row"
    }
  ],
  "presets": [
    {
      "name": "Product Grid (TNO)",
      "category": "Trust.No.Output"
    }
  ]
}
{% endschema %}
