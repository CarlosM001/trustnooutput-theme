{
  "name": "trust-no-output-theme",
  "version": "1.0.0",
  "description": "TRUST.NO.OUTPUT Shopify Theme Development",
  "scripts": {
    "dev": "npm-run-all --parallel dev:theme dev:sync",
    "dev:theme": "shopify theme dev --store=9csvgi-16.myshopify.com --theme=186444382583",
    "dev:sync": "browser-sync start --config bs-config.js",

    "dev:windows": "concurrently \"npm:dev:theme\" \"npm:dev:sync\"",

    "theme:push:dev": "shopify theme push --store=9csvgi-16.myshopify.com --theme=186444382583",
    "theme:push:live": "shopify theme push --store=9csvgi-16.myshopify.com --theme=186572767607 --live",
    "theme:pull": "shopify theme pcustom.min.cssull --store=9csvgi-16.myshopify.com --theme=186444382583",
    "theme:check": "shopify theme check",

    "build:css": "postcss assets/custom.css -o assets/custom.min.css",
    "watch:css": "postcss assets/custom.css -o assets/custom.min.css --watch"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ]
}
